<!-- donationtracker.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <title>Food Donation Leaderboard</title>
  <link rel="stylesheet" href="/trackerstyle.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" 
        integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
  <header>
    <div class="logo">
      <img src="logo.jpeg" alt="Food Share Logo">
    </div>
    <nav>
      <ul>
        <li><a id="home" href="/">Home</a></li>

        <li><a href="/finddonation">Find Donations</a></li>
        <li><a href="/games">Games</a></li>
        <li><a href="/donationtracker">LeaderBoard</a></li>
        <li><a href="/about">About Us</a></li>
        <li><a href="/signup" class="cta-btn">Sign Up</a></li>
        <li><a href="/login" class="cta-btn">Log In</a></li>
    </ul>
    </nav>
  </header>

  <div class="donation-page">
    <!-- Donation Progress Tracker -->
    <section class="donation-tracker">
      <h2>Help Us Reach Our Goal!</h2>
      <p>We’re aiming to collect <strong>90,000 kg of food this month</strong>. So far, we’ve received:</p>
      <div class="progress-bar-container" style="background: #ccc; border-radius: 5px; overflow: hidden; height: 25px; margin: 10px 0;">
        <div class="progress-bar" style="background: #4CAF50; width: <%= donationProgressPercent %>%; height: 100%;"></div>
      </div>
      <p><strong><%= donationSoFar %> kg</strong> donated so far!</p>
    </section>
    
    <!-- Donation Leaderboards -->
    <section class="leaderboard">
        <h2>Top Donors This Month</h2>
        <table>
            <thead>
                <tr>
                    <th>Rank</th>
                    <th>Donor Name</th>
                    <th>Total Donation (kg)</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>John Doe</td>
                    <td>550 kg</td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>Jane Smith</td>
                    <td>830 kg</td>
                </tr>
                <tr>
                    <td>3</td>
                    <td>David Lee</td>
                    <td>920 kg</td>
                </tr>
            </tbody>
        </table>
    </section>
</div>
<!-- Footer Section -->
    <footer>
        <div class="footer-container">
            <div class="footer-logo">
                <img id="img" src="logo.jpeg" alt="Food Share Logo">
            </div>
            <div class="footer-links">
                <ul>
                    <li><a href="/privacypolicy">Privacy Policy</a></li>
                    <li><a href="/termsofservice">Terms of Service</a></li>
                    <li><a href="/contactus">Contact Us</a></li>
                    <li><a href="/faq">FAQ</a></li>
                </ul>
            </div>
            <div class="social-media">
                <a href="https://www.facebook.com/domsfoodmission/"><i class="fa-brands fa-facebook"></i></a>
            <a href="https://en.wikipedia.org/wiki/Twitter"><i class="fa-brands fa-twitter"></i></a>
            <a href="https://www.instagram.com/donateameal_/?hl=en"><i class="fa-brands fa-instagram"></i></a>
            <a href="https://findfoodsupport.withgoogle.com/nonprofit-resources/"><i class="fa-brands fa-google-plus"></i></a>
            <a href="https://www.youtube.com/watch?v=sU6sglkD3MU"><i class="fa-brands fa-youtube"></i></a>
            </div>
        </div>
    </footer>

</body>
</html>