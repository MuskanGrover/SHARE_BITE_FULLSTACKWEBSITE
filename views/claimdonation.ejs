<body>
    <h1>Enter Your Complete Address</h1>
    <form id="addressForm">
        <label for="houseNumber">House/Flat Number:</label>
        <input type="text" id="houseNumber" name="houseNumber" required>

        <label for="street">Street Name:</label>
        <input type="text" id="street" name="street" required>

        <label for="city">City:</label>
        <input type="text" id="city" name="city" required>

        <label for="state">State:</label>
        <input type="text" id="state" name="state" required>

        <label for="pincode">Pincode:</label>
        <input type="text" id="pincode" name="pincode" required>

        <button type="submit">Submit</button>
    </form>
    <!-- Footer Section -->
 <footer>
    <div class="footer-container">
        <div class="footer-logo">
            <img id="img" src="logo.jpeg" alt="Food Share Logo">
        </div>
        <div class="footer-links">
            <ul>
                <li><a href="#">Privacy Policy</a></li>
                <li><a href="#">Terms of Service</a></li>
                <li><a href="#">Contact Us</a></li>
                <li><a href="#">FAQ</a></li>
            </ul>
        </div>
        <div class="social-media">
            <a href="https://www.facebook.com/domsfoodmission/"><i class="fa-brands fa-facebook"></i></a>
